@using BurgerApp.DOMAIN.Enums
@using BurgerApp.VIEWMODELS.OrderViewModels
@model OrderViewModel


<h4>Add burgers to your order:</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddOrderPost" method="post">
            
            <input type="hidden" asp-for="UserId" value="@Model.UserId" />
            <input type="hidden" asp-for="StoreAddress" value="@Model.StoreAddress" />
            <input type="hidden" asp-for="PaymentMethod" value="@Model.PaymentMethod" />
            <input type="hidden" asp-for="IsDelivered" value="@Model.IsDelivered" />
            <input type="hidden" asp-for="NumberOfBurgers" value="@Model.NumberOfBurgers" />
            <input type="hidden" asp-for="BurgerOrders" value="@Model.NumberOfBurgers" />

            <ol>
                @for (var i = 0; i < @Model.NumberOfBurgers; i++)
                {
                    <li>
                        <div class="form-group">
                            <label asp-for="BurgerNames" class="control-label"></label>
                            <select asp-for="BurgerNames" class="form-control" asp-items="@(new SelectList(ViewBag.Burgers, "Name", "Name"))"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="BurgerSizes" class="control-label"></label>
                            <select asp-for="BurgerSizes" class="form-control" asp-items="Html.GetEnumSelectList<BurgerSize>()"></select>
                        </div>
                    </li>
                }
            </ol>
            <hr>
            <button type="submit" class="btn btn-default">Confirm order</button>
        </form>
    </div>
</div>
